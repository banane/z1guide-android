<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"  >
      <TextView
        android:id="@+id/reactdraw"
        android:layout_width="220dip"
        android:layout_height="20dip"
        android:layout_gravity="center_horizontal"
        android:text="@string/reactdraw"
        android:textColor="#FFF"
        android:textSize="12dp" 
        android:layout_marginTop="15dip"
        />
     <TableLayout 
         android:id="@+id/colorbuttons"
         android:layout_width="match_parent"
         android:layout_height="30dip"
         android:layout_gravity="top"
         
         >
           <TableRow>
           <Button
        android:id="@+id/clr_btn_blk"
        android:layout_width="30dip"
        android:layout_margin="3dip"
        android:layout_height="30dip"
        android:layout_gravity="bottom"
        android:background="@color/black"
        android:onClick="clickBlack"
        />
        <Button
        android:id="@+id/clr_btn_red"
        android:layout_width="30dip"
        android:layout_margin="3dip"
        android:layout_height="30dip"
        android:layout_gravity="bottom"
        android:background="@color/red"
        android:onClick="clickRed"
        />
                      <Button
        android:id="@+id/clr_btn_ylw"
        android:layout_width="30dip"
        android:layout_margin="3dip"
        android:layout_height="30dip"
        android:layout_gravity="bottom"
        android:background="@color/yellow"
        android:onClick="clickYellow"
        />
                      <Button
        android:id="@+id/clr_btn_grn"
        android:layout_width="30dip"
        android:layout_margin="3dip"
        android:layout_height="30dip"
        android:layout_gravity="bottom"
        android:background="@color/greendark"
        android:onClick="clickGreen"
        />
                                 <Button
        android:id="@+id/clr_btn_blue"
        android:layout_width="30dip"
        android:layout_margin="3dip"
        android:layout_height="30dip"
        android:layout_gravity="bottom"
        android:background="@color/bluedark"
        android:onClick="clickBlue"
        />
         </TableRow>
         
     </TableLayout>
   	<RelativeLayout 
   	    android:id="@+id/drawingLayout"
   	    android:layout_width="match_parent" 
   	    android:layout_height="300dip"
   	    android:background="#ffffff"
   	    ></RelativeLayout>
     <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_margin="20dip"
        android:layout_height="40dip"
        android:layout_gravity="bottom"
        android:background="@drawable/button_green_sel"
        android:onClick="submitDrawing"
        android:text="SUBMIT"
        />

</LinearLayout>