<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="220dip"
        android:layout_height="128dip"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/seeking_logo_description"
        android:gravity="center"
        android:src="@drawable/seekingsiliconvalley" />

    <TextView
        android:id="@+id/hometext"
        android:layout_width="220dip"
        android:layout_height="40dip"
        android:layout_alignLeft="@+id/home_logo"
        android:layout_alignRight="@+id/home_logo"
        android:layout_below="@id/home_logo"
        android:gravity="left"
        android:text="@string/hometext"
        android:textColor="#FFF"
        android:textSize="12dp" />

    <Button
        android:id="@+id/programs_button"
        android:layout_width="250dip"
        android:layout_height="40dip"
        android:layout_below="@id/hometext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"
        android:background="@drawable/greenbtn"
        android:onClick="viewPrograms"
        android:text="@string/programs_button_label"
        />

    <Button
        android:id="@+id/artists_button"
        android:layout_width="250dip"
        android:layout_height="40dip"
        android:layout_below="@id/programs_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:background="@drawable/greenbtn"
        android:onClick="viewArtists"
        android:text="Artists" />

    <Button
        android:id="@+id/locations_button"
        android:layout_width="250dip"
        android:layout_height="40dip"
        android:layout_below="@id/artists_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:background="@drawable/greenbtn"
        android:onClick="viewLocations"
        android:text="@string/locations_button_label" />

    <Button
        android:id="@+id/about_button"
        android:layout_width="250dip"
        android:layout_height="40dip"
        android:layout_below="@id/locations_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:background="@drawable/graybtn"
        android:onClick="viewAbout"
        android:text="@string/about_button_label" />

</RelativeLayout>